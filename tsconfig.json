{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "strict": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitOverride": true,
        "composite": true,
        "useDefineForClassFields": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": ["ES2015"],
        "rootDir": "src",
        "outDir": "out",
    },
    "include": [
        "src"
    ]
}
